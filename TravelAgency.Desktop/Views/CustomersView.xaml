<UserControl x:Class="TravelAgency.Desktop.Views.CustomersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Resources>
        <!-- Right-align for display cells -->
        <Style x:Key="RightAligned"
               TargetType="{x:Type TextBlock}">
            <Setter Property="HorizontalAlignment"
                    Value="Right" />
            <Setter Property="TextAlignment"
                    Value="Right" />
            <Setter Property="Padding"
                    Value="0,0,6,0" />
        </Style>
        <!-- Right-align for editing cells (in case you make the grid editable later) -->
        <Style x:Key="RightAlignedEditing"
               TargetType="{x:Type TextBox}">
            <Setter Property="HorizontalContentAlignment"
                    Value="Right" />
            <Setter Property="TextAlignment"
                    Value="Right" />
            <Setter Property="Padding"
                    Value="0,0,6,0" />
        </Style>
    </UserControl.Resources>

    <DockPanel>
        <!-- Toolbar -->
        <StackPanel DockPanel.Dock="Top"
                    Orientation="Horizontal"
                    Margin="8">
            <StackPanel.Resources>
                <Style TargetType="Control">
                    <Setter Property="Margin"
                            Value="0,0,8,0" />
                    <Setter Property="VerticalAlignment"
                            Value="Center" />
                </Style>
            </StackPanel.Resources>
            <TextBox Width="160"
                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />
            <Button Content="Load"
                    Command="{Binding LoadCommand}" />
            <Button Content="New"
                    Command="{Binding NewCommand}" />
            <Button Content="Save"
                    Command="{Binding SaveCommand}" />
            <Button Content="Delete"
                    Command="{Binding DeleteCommand}" />
        </StackPanel>

        <!-- Editor -->
        <StackPanel DockPanel.Dock="Top"
                    Orientation="Horizontal"
                    Margin="8,0,8,8">
            <StackPanel.Resources>
                <Style TargetType="Control">
                    <Setter Property="Margin"
                            Value="0,0,8,0" />
                    <Setter Property="VerticalAlignment"
                            Value="Center" />
                </Style>
            </StackPanel.Resources>
            <TextBlock Text="Name" />
            <TextBox Width="220"
                     Text="{Binding EditName}" />
            <TextBlock Text="Email" />
            <TextBox Width="220"
                     Text="{Binding EditEmail}" />
            <TextBlock Text="Phone" />
            <TextBox Width="140"
                     Text="{Binding EditPhone}" />
            <TextBlock Text="OldBalance" />
            <TextBox Width="100"
                     Text="{Binding EditOldBalance}" />
        </StackPanel>

        <!-- Grid -->
        <DataGrid ItemsSource="{Binding Customers}"
                  SelectedItem="{Binding Selected}"
                  AutoGenerateColumns="False"
                  Margin="8"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name"
                                    Binding="{Binding Name}"
                                    Width="220" />
                <DataGridTextColumn Header="Email"
                                    Binding="{Binding Email}"
                                    Width="220" />
                <DataGridTextColumn Header="Phone"
                                    Binding="{Binding Phone}"
                                    Width="140" />
                <DataGridTextColumn Header="Old Balance"
                                    Binding="{Binding OldBalance, StringFormat={}{0:0.##}}"
                                    Width="120"
                                    ElementStyle="{StaticResource RightAligned}"
                                    EditingElementStyle="{StaticResource RightAlignedEditing}" />
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</UserControl>
