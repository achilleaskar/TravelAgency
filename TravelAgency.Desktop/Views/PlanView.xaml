<UserControl x:Class="TravelAgency.Desktop.Views.PlanView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:conv="clr-namespace:TravelAgency.Desktop.Converters"
             Background="White"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <UserControl.Resources>
        <conv:PlanStateToBrushConverter x:Key="PlanStateToBrush" />
    </UserControl.Resources>

    <DockPanel>
        <!-- Filters -->
        <StackPanel DockPanel.Dock="Top"
                    Orientation="Horizontal"
                    Margin="8">
            <StackPanel.Resources>
                <Style TargetType="Control">
                    <Setter Property="Margin"
                            Value="0,0,8,0" />
                    <Setter Property="VerticalAlignment"
                            Value="Center" />
                </Style>
            </StackPanel.Resources>

            <ComboBox Width="220"
                      ItemsSource="{Binding Cities}"
                      DisplayMemberPath="Name"
                      SelectedItem="{Binding SelectedCity}" />
            <DatePicker SelectedDate="{Binding FromDate}" />
            <DatePicker SelectedDate="{Binding ToDate}" />
            <TextBox Width="200"
                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />
            <Button Content="Load"
                    Command="{Binding LoadCommand}" />
        </StackPanel>

        <!-- Legend -->
        <StackPanel DockPanel.Dock="Top"
                    Orientation="Horizontal"
                    Margin="8">
            <StackPanel.Resources>
                <Style TargetType="StackPanel">
                    <Setter Property="Margin"
                            Value="0,0,12,0" />
                    <Setter Property="Orientation"
                            Value="Horizontal" />
                </Style>
                <Style TargetType="Rectangle">
                    <Setter Property="Width"
                            Value="16" />
                    <Setter Property="Height"
                            Value="16" />
                    <Setter Property="Margin"
                            Value="0,0,4,0" />
                </Style>
            </StackPanel.Resources>

            <StackPanel>
                <Rectangle Fill="Green" />
                <TextBlock Text="Free n Paid" />
            </StackPanel>
            <StackPanel>
                <Rectangle Fill="Goldenrod" />
                <TextBlock Text="Free, Payment Due ≤3d" />
            </StackPanel>
            <StackPanel>
                <Rectangle Fill="OrangeRed" />
                <TextBlock Text="Overdue" />
            </StackPanel>
            <StackPanel>
                <Rectangle Fill="Gray" />
                <TextBlock Text="Fully Booked (Unpaid)" />
            </StackPanel>
            <StackPanel>
                <Rectangle Fill="Crimson" />
                <TextBlock Text="Fully Booked (Paid)" />
            </StackPanel>
        </StackPanel>

        <ScrollViewer HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Header row with dates -->
                <ItemsControl ItemsSource="{Binding DayHeaders}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Width="32"
                                    Height="22"
                                    Margin="2,1"
                                    Background="#eee"
                                    CornerRadius="2">
                                <TextBlock Text="{Binding}"
                                           FontSize="10"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center" />
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Rows -->
                <ItemsControl ItemsSource="{Binding Rows}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <DockPanel Margin="2">
                                <TextBlock DockPanel.Dock="Left"
                                           Width="260"
                                           Margin="0,0,8,0"
                                           Text="{Binding Label}"
                                           TextTrimming="CharacterEllipsis" />
                                <ItemsControl ItemsSource="{Binding Cells}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Width="32"
                                                    Height="24"
                                                    Margin="1"
                                                    CornerRadius="3"
                                                    Background="{Binding State, Converter={StaticResource PlanStateToBrush}}"
                                                    ToolTip="{Binding Tooltip}">
                                                <TextBlock Text="{Binding Text}"
                                                           FontSize="10"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center" />
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </DockPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</UserControl>
