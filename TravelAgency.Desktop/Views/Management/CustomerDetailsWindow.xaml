<Window x:Class="TravelAgency.Desktop.Views.CustomerDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Customer Details"
        Width="620"
        Height="520"
        WindowStartupLocation="CenterOwner">
    <Border Margin="12"
            Padding="12"
            BorderBrush="#DDD"
            BorderThickness="1"
            CornerRadius="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock Text="{Binding Name}"
                       FontSize="20"
                       FontWeight="SemiBold" />

            <StackPanel Grid.Row="1"
                        Orientation="Vertical"
                        Margin="0,8,0,12">
                <TextBlock Text="{Binding Email}" />
                <TextBlock Text="{Binding Phone}" />
                <TextBlock Text="{Binding OldBalance}" />
                <TextBlock Text="{Binding CreatedUpdated}"
                           Foreground="Gray" />
                <TextBlock Text="Notes:"
                           FontWeight="SemiBold"
                           Margin="0,8,0,4" />
                <ScrollViewer Height="80">
                    <TextBlock Text="{Binding Notes}"
                               TextWrapping="Wrap" />
                </ScrollViewer>

                <TextBlock Text="Recent Reservations:"
                           FontWeight="SemiBold"
                           Margin="0,12,0,4" />
                <ItemsControl ItemsSource="{Binding Reservations}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>

            <GroupBox Grid.Row="2"
                      Header="Update History">
                <ListBox ItemsSource="{Binding History}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="0,2">
                                <TextBlock Text="{Binding Header}"
                                           FontWeight="SemiBold" />
                                <TextBlock Text="{Binding Diff}"
                                           Foreground="Gray" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </GroupBox>
        </Grid>
    </Border>
</Window>
