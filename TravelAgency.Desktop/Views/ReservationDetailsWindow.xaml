<Window x:Class="TravelAgency.Desktop.Views.ReservationDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Reservation Details"
        Width="820"
        Height="620"
        WindowStartupLocation="CenterOwner">
    <Border Margin="12"
            Padding="12"
            BorderBrush="#DDD"
            BorderThickness="1"
            CornerRadius="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock Text="{Binding Title}"
                       FontSize="20"
                       FontWeight="SemiBold" />

            <Grid Grid.Row="1"
                  Margin="0,8,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0"
                            Orientation="Vertical">
                    <TextBlock Text="{Binding CustomerLine}" />
                    <TextBlock Text="{Binding DateRange}" />
                    <TextBlock Text="{Binding DueInfo}" />
                    <TextBlock Text="{Binding Status}" />
                    <TextBlock Text="{Binding CreatedUpdated}"
                               Foreground="Gray" />
                    <TextBlock Text="Notes:"
                               FontWeight="SemiBold"
                               Margin="0,8,0,4" />
                    <ScrollViewer Height="80">
                        <TextBlock Text="{Binding Notes}"
                                   TextWrapping="Wrap" />
                    </ScrollViewer>
                </StackPanel>

                <StackPanel Grid.Column="1"
                            Orientation="Vertical">
                    <TextBlock Text="Items:"
                               FontWeight="SemiBold"
                               Margin="0,0,0,4" />
                    <ItemsControl ItemsSource="{Binding Items}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <TextBlock Text="Payments:"
                               FontWeight="SemiBold"
                               Margin="0,8,0,4" />
                    <ItemsControl ItemsSource="{Binding Payments}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Grid>

            <GroupBox Grid.Row="2"
                      Header="Update History">
                <ListBox ItemsSource="{Binding History}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="0,2">
                                <TextBlock Text="{Binding Header}"
                                           FontWeight="SemiBold" />
                                <TextBlock Text="{Binding Diff}"
                                           Foreground="Gray" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </GroupBox>
        </Grid>
    </Border>
</Window>
