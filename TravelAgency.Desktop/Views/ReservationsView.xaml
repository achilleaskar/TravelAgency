<UserControl x:Class="TravelAgency.Desktop.Views.ReservationsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewmodels="clr-namespace:TravelAgency.Desktop.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008">
    <DockPanel Background="White">

        <!-- Filters -->
        <Grid DockPanel.Dock="Top"
              Margin="8,6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="220" />
                <ColumnDefinition Width="12" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="220" />
                <ColumnDefinition Width="12" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="140" />
                <ColumnDefinition Width="8" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="140" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       Text="Customer"
                       Style="{StaticResource FormLabel}" />
            <ComboBox  Grid.Column="1"
                       ItemsSource="{Binding Customers}"
                       DisplayMemberPath="Name"
                       SelectedItem="{Binding SelectedCustomer}"
                       Style="{StaticResource FormControl}" />

            <TextBlock Grid.Column="3"
                       Text="From"
                       Style="{StaticResource FormLabel}" />
            <DatePicker Grid.Column="4"
                        SelectedDate="{Binding FromDate}"
                        Style="{StaticResource FormControl}" />

            <TextBlock Grid.Column="6"
                       Text="To"
                       Style="{StaticResource FormLabel}" />
            <DatePicker Grid.Column="7"
                        SelectedDate="{Binding ToDate}"
                        Style="{StaticResource FormControl}" />

            <Button Grid.Column="11"
                    Content="Refresh"
                    Command="{Binding LoadReservationsCommand}"
                    Style="{StaticResource FormControl}" />
        </Grid>

        <Grid Margin="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Toolbar -->
            <StackPanel Grid.Row="0"
                        Orientation="Horizontal"
                        Margin="0,0,0,6">
                <Button Content="Add New"
                        Command="{Binding AddNewCommand}"
                        Style="{StaticResource FormControl}" />
                <Button Content="Edit"
                        Command="{Binding EditSelectedCommand}"
                        Margin="8,0,0,0"
                        Style="{StaticResource FormControl}" />
                <Button Content="Delete"
                        Command="{Binding DeleteSelectedCommand}"
                        Margin="8,0,0,0"
                        Style="{StaticResource FormControl}" />
            </StackPanel>

            <DataGrid Grid.Row="1"
                      ItemsSource="{Binding Reservations}"
                      SelectedItem="{Binding Selected}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True">
                <DataGrid.InputBindings>
                    <!-- Double-click anywhere in the grid to execute EditSelectedCommand -->
                    <MouseBinding MouseAction="LeftDoubleClick"
                                  Command="{Binding EditSelectedCommand}" />
                </DataGrid.InputBindings>
                <DataGrid.Columns> 
                    <DataGridTextColumn Header="From"
                                        Binding="{Binding CheckIn, StringFormat=dd/MM/yyyy}"
                                        Width="110" />
                    <DataGridTextColumn Header="To"
                                        Binding="{Binding CheckOut,   StringFormat=dd/MM/yyyy}"
                                        Width="110" />
                    <DataGridTextColumn Header="Status"
                                        Binding="{Binding Status}"
                                        Width="120" />
                    <DataGridTextColumn Header="Deposit Due"
                                        Binding="{Binding DepositDueDate, StringFormat=dd/MM/yyyy}"
                                        Width="120" />
                    <DataGridTextColumn Header="Balance Due"
                                        Binding="{Binding BalanceDueDate, StringFormat=dd/MM/yyyy}"
                                        Width="120" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </DockPanel>
</UserControl>
