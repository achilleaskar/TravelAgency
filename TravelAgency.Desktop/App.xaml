<Application x:Class="TravelAgency.Desktop.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TravelAgency.Desktop.Helpers"
             xmlns:conv="clr-namespace:TravelAgency.Desktop.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/Theme.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <local:BusyState x:Key="BusyState" />
            <conv:SeverityToBrushConverter x:Key="SeverityToBrush" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
