<Window x:Class="TravelAgency.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TravelAgency.Desktop"
        mc:Ignorable="d"
        Title="Travel Agency"
        Width="1200"
        Height="800">
    <DockPanel>
        <!-- Alerts bar -->
        <Border DockPanel.Dock="Top"
                Background="#222"
                Padding="8">
            <ItemsControl ItemsSource="{Binding Alerts}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="4"
                                Padding="6"
                                CornerRadius="6">
                            <Border.Background>
                                <Binding Path="Severity"
                                         Converter="{StaticResource SeverityToBrush}" />
                            </Border.Background>
                            <TextBlock Foreground="White"
                                       Text="{Binding Message}" />
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Border>

        <TabControl>
            <TabItem Header="Dashboard">
                <local:DashboardView />
            </TabItem>
            <TabItem Header="Hotels">
                <local:HotelsView />
            </TabItem>
            <TabItem Header="Allotments">
                <local:AllotmentsView />
            </TabItem>
            <TabItem Header="Reservations">
                <local:ReservationsView />
            </TabItem>
            <TabItem Header="Customers">
                <local:CustomersView />
            </TabItem>
            <TabItem Header="Plan">
                <local:PlanView />
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>