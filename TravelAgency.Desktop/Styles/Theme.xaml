<!-- TravelAgency.Desktop/Styles/Theme.xaml -->
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Compact spacing tokens -->
    <Thickness x:Key="GapS">4,0,4,0</Thickness>
    <Thickness x:Key="GapM">8,0,8,0</Thickness>

    <!-- Compact row container for (Label + Field) -->
    <Style x:Key="FormRow"
           TargetType="{x:Type StackPanel}">
        <Setter Property="Orientation"
                Value="Horizontal" />
        <Setter Property="Margin"
                Value="0,0,12,8" />
    </Style>

    <!-- Label (no fixed width; we’ll align with Grid) -->
    <Style x:Key="FormLabel"
           TargetType="{x:Type TextBlock}">
        <Setter Property="VerticalAlignment"
                Value="Center" />
        <Setter Property="Margin"
                Value="0,0,6,0" />
        <Setter Property="FontWeight"
                Value="SemiBold" />
    </Style>

    <!-- Small margin for inputs/buttons when you opt-in -->
    <Style x:Key="FormControl"
           TargetType="{x:Type Control}">
        <Setter Property="Margin"
                Value="0,0,8,0" />
        <Setter Property="VerticalAlignment"
                Value="Center" />
    </Style>

    <!-- Make all UserControls white by default -->
    <Style TargetType="{x:Type UserControl}">
        <Setter Property="Background"
                Value="White" />
    </Style>

</ResourceDictionary>
